{
    "title": "Minnesota Public Schools Changes Rules To Lay Off White Teachers Before Minorities",
    "id": "STORY_126_DOCUMENT_1",
    "old_id": "6971_0",
    "split": "test",
    "date": "2022-08-16",
    "topic": "race-and-racism",
